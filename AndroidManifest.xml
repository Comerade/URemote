<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.es.uremote"
    android:versionCode="1"
    android:versionName="0.1" >

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:label="@string/app_name"
            android:name=".Home" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/title_server_dashboard"
            android:name=".computer.ServerDashboard" />
        <activity
            android:label="@string/title_application_launcher"
            android:name=".computer.AppLauncher"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:label="@string/title_filemanager"
            android:name=".computer.FileManager" />
        <activity
            android:label="@string/title_lights"
            android:name=".Lights" />
        <activity
            android:label="@string/title_robots"
            android:name=".RobotControl" />
        <activity
            android:label="@string/tv"
            android:name=".TvDialer" />
        <activity
            android:label="@string/title_tv"
            android:name=".TvChannel" />
    </application>

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-sdk android:minSdkVersion="15" />

</manifest>