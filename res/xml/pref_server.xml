<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

	<PreferenceCategory android:title="@string/pref_server_settings" >
		<EditTextPreference
			android:defaultValue="@string/pref_default_local_host"
			android:key="@string/pref_key_local_host"
			android:summary="@string/pref_local_ip_address_summary"
			android:title="@string/pref_local_ip_address" />
		<EditTextPreference
			android:defaultValue="@string/pref_default_local_port"
			android:key="@string/pref_key_local_port"
			android:summary="@string/pref_local_port_summary"
			android:title="@string/pref_local_port" />
		<EditTextPreference
			android:defaultValue="@string/pref_default_remote_host"
			android:key="@string/pref_key_remote_host"
			android:summary="@string/pref_remote_ip_address_summary"
			android:title="@string/pref_remote_ip_address" />
		<EditTextPreference
			android:defaultValue="@string/pref_default_remote_port"
			android:key="@string/pref_key_remote_port"
			android:summary="@string/pref_remote_port_summary"
			android:title="@string/pref_remote_port" />
		<EditTextPreference
			android:defaultValue="@string/pref_default_timeout"
			android:key="@string/pref_key_timeout"
			android:summary="@string/pref_timeout_summary"
			android:title="@string/pref_timeout" />
	</PreferenceCategory>

</PreferenceScreen>